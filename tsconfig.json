{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "siberianmh/*": ["*", "bazel-bin/*", "bazel-out", "bazel-genfiles/*"]
    },
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "exclude": ["bazel-*", "node_modules"]
}
